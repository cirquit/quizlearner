body {
  background-color: #CCC;
}

#startScreen {
  margin: 64px;
  font-size: 48px;
  font-weight: 900;
  font-family: Helvetica, Arial;
  color: #CCC;
}

.answer {
  float: right;
  width: 750px;
  word-wrap: break-word;
}

.front {
  margin:2px;
  background-color: #2B2B2B;
  }

.button{
  padding: 0;
  border: none;
  background:none;
  text-indent: 0;
}

#exam_list{
  margin-top:30px;
  list-style-type: none;
}


#exam_list li{
  font-family: Helvetica, Arial;
  font-size: 24px;
  margin:10px;
  text-align: left;
  color:#CCC;
}

#exam_title{
  font-weight: 900;
  color:#FFA500;
}

table {
  margin: 20px;
  border-spacing: 10px;
  border-collapse: separate;
}

th {
  font-family: Helvetica, Arial;
  font-size: 24px;
  text-align: left;
  color:#CCC;
}

tr {
  font-family: Helvetica, Arial;
